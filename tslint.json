{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "double", "avoid-escape", "avoid-template"],
        "semicolon": [true, "never"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "typedef": [
            true,
            "parameter",
            "arrow-parameter",
            "property-declaration"
        ],
        "interface-name": false
    },
    "rulesDirectory": []
}
